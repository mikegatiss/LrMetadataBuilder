@model TeamViewModel

<h2>Manage Teams</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.League.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var team in Model.Teams) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => team.League.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => team.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@team.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@team.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@team.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
