@model LeagueViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Leagues
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var league in Model.Leagues) {
        <tr>
            <td>
                @league.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@league.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@league.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@league.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
