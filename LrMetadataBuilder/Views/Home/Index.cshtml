@model HomeViewModel

<div>
    <div>
        <h2>Welcome to my Lightroom Metadata Builder</h2>
        <p>As a regular photographer of Roller Derby Tournaments I spend a huge amount of time updating the metadata on my images,
            so this is an attempt to automate some of that process.
        </p>
        <p>Longer term I intend to add the functionality to export the information as lightroom presets, but one step at a time.</p>
    </div>
    <table class="table table-striped">
        <tr>
            <th>Date</th>
            <th>Event Name</th>
            <th>Venue</th>
            <th>Action</th>
        </tr>
        @foreach (var evt in Model.Events)
        {
            <tr >
                <td class="col-md-2">@evt.EventDate.ToString("dd MMMM yyyy")</td>
                <td class="col-md-3">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@evt.Id">@evt.Name</a>
                </td>
                <td class="col-md-3">@evt.Venue.VenueName</td>
                <td class="col-md-2">
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@evt.Id">DEL</a> | 
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@evt.Id">EDIT</a>
                </td>
                <td>
                    @Html.ActionLink("Games","Index","Game")
                </td>
            </tr>
        }
    </table>
    <div>
        <a asp-controller="Home" asp-action="Create">Add Event</a>
    </div>

</div>