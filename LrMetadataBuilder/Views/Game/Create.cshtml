@model GameListViewModel

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <select asp-for="AwayTeam" class ="form-control" asp-items="ViewBag.AwayTeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <select asp-for="HomeTeam" class ="form-control" asp-items="ViewBag.HomeTeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HomeScore" class="control-label"></label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayScore" class="control-label"></label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhistleTime" class="control-label"></label>
                <input asp-for="WhistleTime" class="form-control" />
                <span asp-validation-for="WhistleTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

